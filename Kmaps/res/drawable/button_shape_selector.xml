<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_enabled="false">
		<shape>
			<solid android:color="#555555"></solid>
			<corners android:radius="6dp"></corners>
			<padding android:left="12dp" 
			    android:right="12dp"
				android:top="4dp" 
				android:bottom="4dp" 
				/>
			<stroke android:width="1dp" 
			    android:color="@color/c82" 
			    />
		</shape>
	</item>
	<item android:state_pressed="true" 
	    android:drawable="@drawable/button_shape_pressed">
		<shape>
			<solid android:color="@color/black"></solid>
			<corners android:radius="6dp"></corners>
			<padding android:left="12dp" 
			    android:right="12dp"
				android:top="4dp" 
				android:bottom="4dp" 
				/>
			<gradient android:angle="270" 
			    android:startColor="@color/c00"
				android:endColor="@color/c82" 
				android:centerColor="@color/c00"
				android:centerX="0.6" />
			<stroke android:width="1dp" android:color="@color/c82" />
		</shape>
	</item>
	<item android:drawable="@drawable/button_shape">
		<shape>
			<solid android:color="@color/black"></solid>
			<corners android:radius="6dp"></corners>
			<padding android:left="12dp" 
			    android:right="12dp"
				android:top="4dp" 
				android:bottom="4dp" />
			<gradient android:angle="90" 
			    android:startColor="@color/c00"
				android:endColor="@color/c82" 
				android:centerColor="@color/c00" />
			<stroke android:width="1dp" android:color="@color/c82" />
		</shape>
	</item>

</selector>
