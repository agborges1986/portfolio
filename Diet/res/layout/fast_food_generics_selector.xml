<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical" android:background="@drawable/c82_round_both" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="10dp" android:gravity="center_horizontal">
		<TextView android:id="@+id/textView3" android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:text="@string/select_food_group" android:textColor="@color/c00" android:layout_margin="4dp"></TextView>
		<LinearLayout android:orientation="vertical" android:background="@drawable/cf1_round_both" android:layout_margin="2dp" android:gravity="center_vertical|center_horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
			<ImageButton android:scaleType="fitCenter"
				android:layout_height="100dp" android:id="@+id/imageButton1" android:layout_width="100dp"
				android:background="@drawable/food_group_button_background_selector"
				android:src="@drawable/generic_food_selector_icon"></ImageButton>
			<TextView android:text="@string/generic_foods_text"
				android:id="@+id/textView1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="@color/c00"
				android:textSize="18dp" android:layout_marginBottom="30dp"></TextView>
			<ImageButton android:scaleType="fitCenter"
				android:layout_height="100dp" android:id="@+id/imageButton2" android:layout_width="100dp"
				android:background="@drawable/food_group_button_background_selector"
				android:padding="4dp" android:src="@drawable/fast_food_selector_icon"></ImageButton>
			<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/fast_foods_text"
				android:textColor="@color/c00" android:textSize="18dp"></TextView>			
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
